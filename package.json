{
  "name": "react-native-multidrawer",
  "version": "1.0.0",
  "description": "A powerful, customizable multi-directional drawer component for React Native with smooth animations and gesture handling",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "react-native": "src/index.ts",
  "files": [
    "lib",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "cd example && npm start",
    "example:install": "cd example && npm install",
    "example:ios": "cd example && npm run ios",
    "example:android": "cd example && npm run android", 
    "example:web": "cd example && npm run web",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "prepare": "npm run build",
    "docs:dev": "cd docs && npm start",
    "docs:build": "cd docs && npm run build",
    "docs:serve": "cd docs && npm run serve",
    "docs:install": "cd docs && npm install",
    "docs:deploy": "cd docs && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/react-native-multidrawer.git"
  },
  "keywords": [
    "react-native",
    "drawer",
    "navigation",
    "gesture",
    "animation", 
    "reanimated",
    "multidrawer",
    "edge",
    "swipe"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/react-native-multidrawer/issues"
  },
  "homepage": "https://yourusername.github.io/react-native-multidrawer",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.72.0",
    "react-native-gesture-handler": ">=2.20.0",
    "react-native-reanimated": ">=3.15.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.0.10",
    "@types/jest": "^29.5.0",
    "typescript": "~5.8.3",
    "eslint": "^9.25.0",
    "eslint-config-expo": "~9.2.0",
    "jest": "^29.5.0",
    "react": "19.0.0",
    "react-native": "0.79.5",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4"
  }
}
